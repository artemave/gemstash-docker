#!/bin/sh

set -e

[ -f gemstash.yml ] && rm gemstash.yml

echo '---' > gemstash.yml
echo ":bind: 'tcp://0.0.0.0:$PORT'" >> gemstash.yml
echo ":db_adapter: postgres" >> gemstash.yml
echo ":db_url: '$DATABASE_URL'" >> gemstash.yml

bundle exec gemstash start --no-daemonize --config-file=./gemstash.yml
